    <script>
      // function to toggle open the sidebar
      function Open() {
        document.querySelector('.sidebar').classList.toggle('left-[-300px]');
      }

      // function to toggle close the sidebar
      function Close() {
        document.querySelector('.sidebar').classList.toggle('left-[-300px]');
      }

      // helper function to replace hyphens with spaces
      function replaceHyphensWithSpaces(str) {
          return str.replace(/-/g, ' ');
      }

      // initialize array for all ids of elements to scroll to
      const elementsToScrollTo = ['all-charts', 'water-consumption-chart', 'natural-gas-consumption-chart', 'grid-electricity-consumption-chart', 'steam-consumption-chart', 'food-waste-chart', 'solar-kwh-chart', 'water-recycled-chart'];
      // function for search bar to scroll element into view when something is searched for
      const searchInput = document.querySelector('.search-input');
      searchInput.addEventListener('input', (event) => {
        const value = event.target.value.toLowerCase();
        for (let a = 0; a < elementsToScrollTo.length; a++) {
          const elementId = replaceHyphensWithSpaces(elementsToScrollTo[a].toLowerCase());
          if (elementId.includes(value)) {
            const element = document.getElementById(elementsToScrollTo[a]);
            element.scrollIntoView({ behavior: 'smooth' });
          }
        }
        if (value === '') {
            const element = document.getElementById('all-charts');
            element.scrollIntoView({ behavior: 'smooth' });
          }
      });
    </script>
